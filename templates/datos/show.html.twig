{% extends 'base.html.twig' %}

{% block title %}Datos{% endblock %}

{% block body %}
    <h1>Datos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dato.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ dato.Nombre }}</td>
            </tr>
            <tr>
                <th>Clasificacion</th>
                <td>{{ dato.Clasificacion }}</td>
            </tr>
            <tr>
                <th>Fechainicio</th>
                <td>{{ dato.fechainicio ? dato.fechainicio|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fechacierre</th>
                <td>{{ dato.fechacierre ? dato.fechacierre|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ dato.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('datos_index') }}">Regresar a lista de tareas</a>

    <a href="{{ path('datos_edit', {'id': dato.id}) }}">Editar </a>

    <a href="{{ path('datos_delete', {'id': dato.id}) }}">Eliminar </a>


    {{ include('datos/_delete_form.html.twig') }}
{% endblock %}
